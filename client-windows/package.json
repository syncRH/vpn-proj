{
  "name": "vpn-client",
  "version": "1.0.0",
  "description": "VPN клиент для подключения к серверам",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development && electron .",
    "build": "electron-builder",
    "package-win": "electron-builder --win --x64 --publish never"
  },
  "build": {
    "appId": "com.vpnproject.client",
    "productName": "VPN Client",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "**/*",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,suo,xproj,cc,d.ts}"
    ],
    "extraResources": [
      "assets/**"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/openvpn-*/**/*"
    ]
  },
  "keywords": [
    "vpn",
    "client",
    "openvpn"
  ],
  "author": "VPN Project Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bootstrap": "^5.3.2",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.1",
    "react-dom": "^18.2.0",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "electron": "^26.3.0",
    "electron-builder": "^24.6.4"
  }
}
